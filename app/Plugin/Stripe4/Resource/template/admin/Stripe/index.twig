{% extends '@admin/default_frame.twig' %}

{% set menus = ['stripe', 'stripe_admin_config'] %}

{% block title %}{{ 'stripe.admin.config.header'|trans }}{% endblock %}
{% block sub_title %}{{ 'stripe.admin.config.title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}

{% endblock stylesheet %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        {% for error in form.vars.errors %}
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="fa fa-warning fa-lg mr-2"></i>
                <span class="font-weight-bold">{{ error.message|trans }}</span>
                <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
        {% endfor %}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ 'stripe.admin.config.header'|trans }}</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>{{ 'APIキー'|trans }}</span><span
                                        class="badge badge-primary ml-1">{{ 'stripe.admin.config.required'|trans }}</span></div>
                                <div class="col mb-2">
                                    {% if public_key %}
                                        <p><b>{{ public_key }}</b></p>
                                        <p><a href="{{ url('stripe4_admin_stripe_user') }}">APIキーを変更する</a></p>
                                    {% else %}
                                        <p><a href="{{ url('stripe4_admin_stripe_user') }}">APIキーを登録する</a></p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'stripe.admin.config.capture'|trans }}</span><span
                                        class="badge badge-primary ml-1">{{ 'stripe.admin.config.required'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.capture) }}
                                    {{ form_errors(form.capture) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'stripe.admin.config.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
